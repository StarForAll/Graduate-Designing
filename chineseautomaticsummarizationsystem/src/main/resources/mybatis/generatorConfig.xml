<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="false"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="beginningDelimiter" value=""/>
            <property name="endingDelimiter" value=""/>
        </plugin>
        <!-- mybatis 与swagger 生成的实体类注释-->
        <plugin type="mybatis.generator.plugins.GeneratorSwagger2Doc">
            <property name="apiModelAnnotationPackage" value="io.swagger.annotations.ApiModel"/>
            <property name="apiModelPropertyAnnotationPackage" value="io.swagger.annotations.ApiModelProperty"/>
        </plugin>
        <plugin type="com.itfsw.mybatis.generator.plugins.LombokPlugin">
            <property name="@Data" value="true"/>
            <property name="@Builder" value="false"/>
            <property name="@AllArgsConstructor" value="true"/>
            <property name="@NoArgsConstructor" value="true"/>
            <property name="@Accessors(chain=true)" value="false"/>
            <property name="@supportSuperBuilderForIdea" value="false"/>
        </plugin>
        <commentGenerator type="cn.edu.ncu.common.config.mybatis.MyBatisCommentGenerator">
            <property name="suppressDate" value="false"/>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/cass"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <!--MyBatis 生成器只需要生成 Model 这里指定了model的父类-->
        <javaModelGenerator targetPackage="cn.edu.ncu.dao.entity"
                            targetProject="src/main/java"/>
<!--        <sqlMapGenerator targetPackage="mapper"-->
<!--                         targetProject="src/main/resources/mybatis"/>-->
<!--        <javaClientGenerator targetPackage="cn.edu.ncu.dao.mapper"-->
<!--                             targetProject="src/main/java"-->
<!--                             type="XMLMAPPER"/>-->
        <table tableName="abstract" domainObjectName="Abstract">
<!--            <property name="rootClass" value="cn.edu.ncu.common.core.pojo.entity.BaseEntity"></property>-->
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>